<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/bottomSheetContainer"
    android:background="@drawable/bottom_sheet_price_background">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/tabletgreyline"/>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/title_price_bottom_sheet"
            android:text="Tesla Wireless Charging coil Based"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textColor="@color/white"
            android:layout_marginTop="30dp"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView21"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:text="Idea / Schema : "
                android:textColor="@color/grey"
                android:textSize="20dp" />

            <TextView
            android:id="@+id/idea_price_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="₹12000"
                android:maxLength="20"
                android:textSize="25dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="20dp"
                android:textColor="#FF3D3D"
            />
        </LinearLayout>




        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/tsf2424"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="50dp"
                android:text="Product : "
                android:textColor="@color/grey"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/product_price_show"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹22000"
                android:maxLength="20"
                android:layout_marginRight="20dp"
                android:textSize="25dp"
                android:layout_marginTop="50dp"
                android:textColor="#FF3D3D"
                />
        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/price_proceed_btn"
            android:layout_gravity="center"
            android:background="@drawable/btnshape"
            android:text="Proceed To Buy"
            android:textColor="@color/black"
            android:layout_marginTop="50dp"/>



    </LinearLayout>













</LinearLayout>