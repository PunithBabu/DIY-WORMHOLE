<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/mypost_title_main"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:ellipsize="end"
                android:maxLength="30"
                android:maxLines="1"
                android:text="TESLA COIL AC TRANFORMER"
                android:textColor="@color/white"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="5dp"
                    android:layout_height="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/rounddot" />

                <TextView
                    android:id="@+id/mydate_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="00-00-0000"
                    android:textColor="@color/grey"
                    android:textSize="10dp" />

                <TextView
                    android:id="@+id/mytime_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="00-00"
                    android:textColor="@color/grey"
                    android:textSize="10dp" />


            </LinearLayout>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/mymain_post_image"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:adjustViewBounds="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/postsample" />

            </LinearLayout>


            <com.borjabravo.readmoretextview.ReadMoreTextView
                android:id="@+id/mypost_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="afafacafacaafafacafacacacqafafafafafaffafdfaafafafaaffafafafafafaefw sg sg g sgsg sg f g sg g zfgs zg zg  sg sg sg sgsgsg t34tw sg34tg3geg t amioj89 af a  af af f af af aa  a af a fasf 3hr8ah8jf afa r raf afafaf83caehfaofhaufhafaafafaasga afafafafafafafafaf100cacqafafafafafafamioj89 af a  af af f af af aa  a af a fasf 3hr8ah8jf afa r raf afafaf83caehfaofhaufhafaafafaasga afafafafafafafafaf100"
                android:textColor="#C6C4C4"
                android:textSize="15dp"
                app:colorClickableText="@color/white"
                app:trimCollapsedText="Show less"
                app:trimExpandedText="Read more"
                app:trimLength="200"
                app:trimMode="trimModeLength" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/mylike_image_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/likebtn" />

            <TextView
                android:id="@+id/mylike_count_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="1343"
                android:textColor="@color/grey"

                />


            <ImageView
                android:id="@+id/mycomment_image_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/commentbtnicon" />

            <TextView
                android:id="@+id/mycomment_count_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="102"
                android:textColor="@color/grey" />

            <ImageView
                android:id="@+id/myprice_see_btn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="60dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:src="@drawable/priceiconbtn" />

            <ImageView
                android:id="@+id/mypost_option_btn"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="70dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/threedotbtnwhite" />


        </LinearLayout>


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp"
            android:alpha="10"
            android:src="@drawable/greyline"
            android:tintMode="add" />


    </LinearLayout>


</RelativeLayout>